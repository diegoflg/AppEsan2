<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabHost2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/LaRuta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menus"
                        android:id="@+id/tvcaf1"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/ec"
                        android:layout_alignEnd="@+id/ec"
                        android:layout_marginRight="28dp"
                        android:layout_marginEnd="28dp" />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economico"
                        android:id="@+id/ec"
                        android:layout_below="@+id/tvcaf1"
                         />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ejecutivo"
                        android:id="@+id/ej"
                        android:layout_below="@id/ec"
                        android:layout_alignRight="@+id/ec"
                        android:layout_alignEnd="@+id/ec"
                        android:layout_alignLeft="@+id/ec"
                        android:layout_alignStart="@+id/ec" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dieta"
                        android:id="@+id/di"
                        android:layout_below="@+id/ej"
                        android:layout_alignRight="@+id/ej"
                        android:layout_alignEnd="@+id/ej"
                        android:layout_alignLeft="@+id/ej"
                        android:layout_alignStart="@+id/ej" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Precio"
                        android:id="@+id/precio"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:id="@+id/precio1"
                        android:layout_alignBaseline="@+id/ec"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:id="@+id/precio2"
                        android:layout_alignBaseline="@+id/ej"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:id="@+id/precio3"
                        android:layout_alignBaseline="@+id/di"
                        android:layout_centerHorizontal="true" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/DeliSabores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menus"
                        android:id="@+id/tvcaf2"
                        android:layout_alignParentTop="true"
                        android:layout_alignRight="@+id/ec2"
                        android:layout_alignEnd="@+id/ec2"
                        android:layout_marginRight="28dp"
                        android:layout_marginEnd="28dp" />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Economico"
                        android:id="@+id/ec2"
                        android:layout_below="@+id/tvcaf2"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Especial"
                        android:id="@+id/es"
                        android:layout_below="@id/ec2"
                        android:layout_alignRight="@+id/ec2"
                        android:layout_alignEnd="@+id/ec2"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Precio"
                        android:id="@+id/textViewd"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:id="@+id/preciod1"
                        android:layout_alignBaseline="@+id/ec2"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8.5"
                        android:id="@+id/preciod2"
                        android:layout_alignBaseline="@+id/es"
                        android:layout_centerHorizontal="true" />






                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <ListView
        android:background="@drawable/hoja"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/tabHost2" />


</RelativeLayout>





