<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado de Pagos"
        android:id="@+id/ttvv"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFC90039"
        />
    <TableLayout
        android:layout_below="@+id/ttvv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="3">

        <TableRow
            android:background="#FFC90039"
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_weight="1"
                android:text="Concepto"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:layout_weight="1"
                android:text="Monto"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_weight="1"
                android:text="Vencimiento"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"/>



        </TableRow>

        <TableRow

            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:background="@drawable/tableborder3"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Matricula"
                android:id="@+id/concepto1" />

            <TextView
                android:background="@drawable/tableborder3"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Monto"
                android:id="@+id/monto1" />

            <TextView
                android:background="@drawable/tableborder3"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Vencimiento"
                android:id="@+id/vencimiento1" />



        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cuota 1"
                android:id="@+id/concepto2" />

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Monto"
                android:id="@+id/monto2"/>

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vencimiento"
                android:id="@+id/vencimiento2"/>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cuota2"
                android:id="@+id/concepto3"/>

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Monto"
                android:id="@+id/monto3"/>

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vencimiento"
                android:id="@+id/vencimiento3"/>



        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cuota3"
                android:id="@+id/concepto4"/>

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Monto"
                android:id="@+id/monto4"/>

            <TextView
                android:background="@drawable/tableborder3"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vencimiento"
                android:id="@+id/vencimiento4"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
